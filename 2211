//////////////////////////////////////// REGULATOR OBIEGU CHLODZONEGO
void regq2(void)
   {
   q2 = 0.5 + 0.5 * q2min + 0.10 * (tempq2d - tempq2dzad); // regulacja przeplywu q2
   if (q2 > 1.0)
      q2 = 1.0;
      else
      {
      if (q2 < q2min)
        q2 = q2min;
      };
   };

